@page "/oldAllFriends"
@model BamstiChat.Pages.oldAllFriendsModel

@{
    ViewData["Title"] = "AllFriends";
    Layout = "_Layout";
}

<h1>AllFriends</h1>

<h4>Friend</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Friend.UserId" class="control-label"></label>
                <select asp-for="Friend.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Friend.Since" class="control-label"></label>
                <input asp-for="Friend.Since" class="form-control" />
                <span asp-validation-for="Friend.Since" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
